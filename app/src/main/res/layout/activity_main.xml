<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_background"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_main_activity"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/main_activity_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_toolbarText"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:gravity="top"
        android:text="@string/toolbar_text"
        android:textAppearance="@style/toolbar_text_style"
        app:layout_constraintStart_toStartOf="@+id/Toolbar_main_activity"
        app:layout_constraintTop_toTopOf="@+id/Toolbar_main_activity"/>


    <Button
        android:id="@+id/Button_shopActivity"
        android:layout_width="335dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/shop_button"
        android:text="@string/shop_button_text"
        android:textAppearance="@style/shop_button_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
